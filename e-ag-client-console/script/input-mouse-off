#!/bin/bash

echo "ğŸ” Fare cihazlarÄ± aranÄ±yor..."

for dev in /sys/class/input/event*; do
    name=$(udevadm info -q property --path $dev | grep ID_INPUT_MOUSE=1)
    if [[ -n "$name" ]]; then
        enabled_file="$dev/device/../enabled"

        if [[ -f "$enabled_file" ]]; then
            state=$(cat "$enabled_file")
            if [[ "$state" == "0" ]]; then
                echo "âš  Zaten devre dÄ±ÅŸÄ±: $dev"
            else
                echo 0 > "$enabled_file"
                echo "ğŸ”’ Devre dÄ±ÅŸÄ± bÄ±rakÄ±ldÄ±: $dev"
            fi
        fi
    fi
done

