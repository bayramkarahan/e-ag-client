#!/bin/bash
# DÃ¶ngÃ¼yÃ¼ durdur ve engeli kaldÄ±r
LOCK_FILE="/tmp/yt-block.lock"

if [ -f "$LOCK_FILE" ]; then
    rm "$LOCK_FILE"
    echo "ğŸ›‘ Engelleme dÃ¶ngÃ¼sÃ¼ durduruldu."
else
    echo "â„¹ï¸ DÃ¶ngÃ¼ zaten Ã§alÄ±ÅŸmÄ±yor."
fi

# Engeli kaldÄ±r
#/usr/bin/yt-on
# ğŸ”“ YouTube engelini kaldÄ±rma script'i
# Ã‡alÄ±ÅŸtÄ±r: sudo ./yt-unblock.sh

set -e

echo "ğŸ§¹ Eski ipset setleri temizleniyor..."
ipset destroy ytblock 2>/dev/null || true
ipset destroy ytblock6 2>/dev/null || true

echo "ğŸ§¹ iptables zincirleri temizleniyor..."
# IPv4
sudo iptables -D OUTPUT -j YT_BLOCK 2>/dev/null || true
sudo iptables -D FORWARD -j YT_BLOCK 2>/dev/null || true
sudo iptables -F YT_BLOCK 2>/dev/null || true
sudo iptables -X YT_BLOCK 2>/dev/null || true

# IPv6
sudo ip6tables -D OUTPUT -j YT_BLOCK6 2>/dev/null || true
sudo ip6tables -D FORWARD -j YT_BLOCK6 2>/dev/null || true
sudo ip6tables -F YT_BLOCK6 2>/dev/null || true
sudo ip6tables -X YT_BLOCK6 2>/dev/null || true

echo "âœ… YouTube engeli kaldÄ±rÄ±ldÄ±!"

